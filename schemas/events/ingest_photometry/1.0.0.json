{
  "$defs": {
    "JobType": {
      "enum": [
        "InitializeNova",
        "IngestNewNova",
        "RefreshReferences",
        "DiscoverSpectraProducts",
        "AcquireAndValidateSpectra",
        "IngestPhotometryEvent",
        "NameCheckAndReconcile"
      ],
      "title": "JobType",
      "type": "string"
    }
  },
  "$id": "nova-cat://schemas/events/ingest_photometry/1.0.0",
  "additionalProperties": false,
  "description": "Photometry ingestion front door.\n\nAccepts either:\n- candidate_name (workflow will resolve to nova_id), OR\n- nova_id (already resolved)\n\nNo dataset abstraction exists.",
  "properties": {
    "attributes": {
      "additionalProperties": true,
      "title": "Attributes",
      "type": "object"
    },
    "candidate_name": {
      "anyOf": [
        {
          "maxLength": 256,
          "minLength": 1,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Candidate Name"
    },
    "correlation_id": {
      "format": "uuid",
      "title": "Correlation Id",
      "type": "string"
    },
    "event_version": {
      "default": "1.0.0",
      "title": "Event Version",
      "type": "string"
    },
    "initiated_at": {
      "format": "date-time",
      "title": "Initiated At",
      "type": "string"
    },
    "job_type": {
      "$ref": "#/$defs/JobType",
      "default": "IngestPhotometryEvent"
    },
    "nova_id": {
      "anyOf": [
        {
          "format": "uuid",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Nova Id"
    },
    "photometry_schema_version": {
      "anyOf": [
        {
          "maxLength": 64,
          "minLength": 1,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Photometry Schema Version"
    },
    "source": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Where this request came from (e.g., UI, ingest feed).",
      "title": "Source"
    }
  },
  "title": "IngestPhotometryEvent",
  "type": "object"
}
