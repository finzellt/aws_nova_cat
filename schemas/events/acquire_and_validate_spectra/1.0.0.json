  "description": "One data_product_id per execution (Mode 1).\n\nThe workflow reads locator/provenance/acquisition metadata from the persisted DataProduct record.\nBoundary event identifies the target data product only.",
  "properties": {
    "attributes": {
      "additionalProperties": true,
      "title": "Attributes",
      "type": "object"
    },
    "correlation_id": {
      "format": "uuid",
      "title": "Correlation Id",
      "type": "string"
    },
    "data_product_id": {
      "format": "uuid",
      "title": "Data Product Id",
      "type": "string"
    },
    "event_version": {
      "default": "1.0.0",
      "title": "Event Version",
      "type": "string"
    },
    "initiated_at": {
      "format": "date-time",
      "title": "Initiated At",
      "type": "string"
    },
    "job_type": {
      "$ref": "#/$defs/JobType",
      "default": "AcquireAndValidateSpectra"
    },
    "nova_id": {
      "format": "uuid",
      "title": "Nova Id",
      "type": "string"
    },
    "provider": {
      "maxLength": 128,
      "minLength": 1,
      "title": "Provider",
      "type": "string"
    }
  },
  "required": [
    "nova_id",
    "provider",
    "data_product_id"
  ],
  "title": "AcquireAndValidateSpectraEvent",
  "type": "object"
