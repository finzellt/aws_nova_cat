{
  "$defs": {
    "ContentDigest": {
      "additionalProperties": false,
      "properties": {
        "algorithm": {
          "const": "sha256",
          "default": "sha256",
          "title": "Algorithm",
          "type": "string"
        },
        "value": {
          "description": "Hex digest.",
          "maxLength": 128,
          "minLength": 64,
          "title": "Value",
          "type": "string"
        }
      },
      "required": [
        "value"
      ],
      "title": "ContentDigest",
      "type": "object"
    },
    "FileRole": {
      "enum": [
        "primary",
        "preview",
        "auxiliary",
        "metadata"
      ],
      "title": "FileRole",
      "type": "string"
    },
    "Provenance": {
      "additionalProperties": false,
      "description": "Scientific provenance: enough to trace 'what said this' and 'when',\nwithout overfitting to any single upstream system.",
      "properties": {
        "asserted_by": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Human or system actor that asserted this fact (e.g., ORCID, service name).",
          "title": "Asserted By"
        },
        "citation": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Optional citation string or bibcode/doi reference.",
          "title": "Citation"
        },
        "method": {
          "$ref": "#/$defs/ProvenanceMethod",
          "default": "imported"
        },
        "notes": {
          "anyOf": [
            {
              "maxLength": 2000,
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Notes"
        },
        "retrieved_at": {
          "format": "date-time",
          "title": "Retrieved At",
          "type": "string"
        },
        "schema_version": {
          "default": "1.0.0",
          "description": "Semantic version for this persistent entity contract.",
          "examples": [
            "1.0.0"
          ],
          "title": "Schema Version",
          "type": "string"
        },
        "source": {
          "description": "Canonical identifier for upstream source (e.g., 'ASAS-SN', 'ADS', 'AAVSO', 'UserUpload').",
          "minLength": 1,
          "title": "Source",
          "type": "string"
        },
        "source_record_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Upstream record identifier, if provided.",
          "title": "Source Record Id"
        }
      },
      "required": [
        "source"
      ],
      "title": "Provenance",
      "type": "object"
    },
    "ProvenanceMethod": {
      "enum": [
        "manual",
        "scraped",
        "computed",
        "imported"
      ],
      "title": "ProvenanceMethod",
      "type": "string"
    }
  },
  "$id": "nova-cat://schemas/entities/file_object/1.0.0",
  "additionalProperties": false,
  "description": "Logical file contract (not storage layout): identity + integrity + descriptive metadata.",
  "properties": {
    "created_at": {
      "format": "date-time",
      "title": "Created At",
      "type": "string"
    },
    "digest": {
      "anyOf": [
        {
          "$ref": "#/$defs/ContentDigest"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "filename": {
      "maxLength": 512,
      "minLength": 1,
      "title": "Filename",
      "type": "string"
    },
    "id": {
      "format": "uuid",
      "title": "Id",
      "type": "string"
    },
    "media_type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "IANA media type if known, e.g. 'application/fits'.",
      "title": "Media Type"
    },
    "provenance": {
      "anyOf": [
        {
          "$ref": "#/$defs/Provenance"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "role": {
      "$ref": "#/$defs/FileRole",
      "default": "primary"
    },
    "schema_version": {
      "default": "1.0.0",
      "description": "Semantic version for this persistent entity contract.",
      "examples": [
        "1.0.0"
      ],
      "title": "Schema Version",
      "type": "string"
    },
    "size_bytes": {
      "anyOf": [
        {
          "minimum": 0,
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Size Bytes"
    },
    "updated_at": {
      "format": "date-time",
      "title": "Updated At",
      "type": "string"
    },
    "url": {
      "anyOf": [
        {
          "format": "uri",
          "maxLength": 2083,
          "minLength": 1,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Upstream URL if externally sourced.",
      "title": "Url"
    }
  },
  "required": [
    "filename"
  ],
  "title": "FileObject",
  "type": "object"
}
