      "title": "NameKind",
      "type": "string"
    },
    "NameMappingSource": {
      "enum": [
        "USER_INPUT",
        "INGESTION",
        "SIMBAD",
        "TNS",
        "OTHER"
      ],
      "title": "NameMappingSource",
      "type": "string"
    }
  },
  "$id": "nova-cat://schemas/entities/name_mapping/1.0.0",
