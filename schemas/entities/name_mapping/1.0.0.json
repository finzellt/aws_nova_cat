      "format": "uuid",
      "title": "Nova Id",
      "type": "string"
    },
    "schema_version": {
      "default": "1.0.0",
      "title": "Schema Version",
      "type": "string"
    },
    "source": {
      "$ref": "#/$defs/NameMappingSource",
      "default": "OTHER"
    },
    "updated_at": {
      "format": "date-time",
      "title": "Updated At",
      "type": "string"
