{
  "$defs": {
    "JobStatus": {
      "enum": [
        "queued",
        "running",
        "succeeded",
        "failed",
        "cancelled"
      ],
      "title": "JobStatus",
      "type": "string"
    },
    "JobType": {
      "enum": [
        "InitializeNova",
        "IngestNewNova",
        "RefreshReferences",
        "DiscoverSpectraProducts",
        "AcquireAndValidateSpectra",
        "IngestPhotometryDataset",
        "NameCheckAndReconcile"
      ],
      "title": "JobType",
      "type": "string"
    }
  },
  "$id": "nova-cat://schemas/entities/job_run/1.0.0",
  "additionalProperties": false,
  "description": "Persistent record of a workflow/job invocation.",
  "properties": {
    "attributes": {
      "additionalProperties": true,
      "title": "Attributes",
      "type": "object"
    },
    "correlation_id": {
      "description": "Correlates this run across events/services.",
      "format": "uuid",
      "title": "Correlation Id",
      "type": "string"
    },
    "created_at": {
      "format": "date-time",
      "title": "Created At",
      "type": "string"
    },
    "dataset_id": {
      "anyOf": [
        {
          "format": "uuid",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dataset Id"
    },
    "finished_at": {
      "anyOf": [
        {
          "format": "date-time",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Finished At"
    },
    "idempotency_key": {
      "maxLength": 256,
      "minLength": 8,
      "title": "Idempotency Key",
      "type": "string"
    },
    "initiated_at": {
      "format": "date-time",
      "title": "Initiated At",
      "type": "string"
    },
    "initiated_by": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Actor or service initiating the run.",
      "title": "Initiated By"
    },
    "job_run_id": {
      "format": "uuid",
      "title": "Job Run Id",
      "type": "string"
    },
    "job_type": {
      "$ref": "#/$defs/JobType"
    },
    "nova_id": {
      "anyOf": [
        {
          "format": "uuid",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Nova Id"
    },
    "schema_version": {
      "default": "1.0.0",
      "title": "Schema Version",
      "type": "string"
    },
    "status": {
      "$ref": "#/$defs/JobStatus",
      "default": "queued"
    },
    "updated_at": {
      "format": "date-time",
      "title": "Updated At",
      "type": "string"
    }
  },
  "required": [
    "job_type",
    "correlation_id",
    "idempotency_key"
  ],
  "title": "JobRun",
  "type": "object"
}
