{
  "$defs": {
    "AliasType": {
      "enum": [
        "official",
        "common",
        "survey",
        "historical",
        "other"
      ],
      "title": "AliasType",
      "type": "string"
    },
    "Provenance": {
      "additionalProperties": false,
      "description": "Scientific provenance: enough to trace 'what said this' and 'when',\nwithout overfitting to any single upstream system.",
      "properties": {
        "asserted_by": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Human or system actor that asserted this fact (e.g., ORCID, service name).",
          "title": "Asserted By"
        },
        "citation": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Optional citation string or bibcode/doi reference.",
          "title": "Citation"
        },
        "method": {
          "$ref": "#/$defs/ProvenanceMethod",
          "default": "imported"
        },
        "notes": {
          "anyOf": [
            {
              "maxLength": 2000,
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Notes"
        },
        "retrieved_at": {
          "format": "date-time",
          "title": "Retrieved At",
          "type": "string"
        },
        "schema_version": {
          "default": "1.0.0",
          "description": "Semantic version for this persistent entity contract.",
          "examples": [
            "1.0.0"
          ],
          "title": "Schema Version",
          "type": "string"
        },
        "source": {
          "description": "Canonical identifier for upstream source (e.g., 'ASAS-SN', 'ADS', 'AAVSO', 'UserUpload').",
          "minLength": 1,
          "title": "Source",
          "type": "string"
        },
        "source_record_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Upstream record identifier, if provided.",
          "title": "Source Record Id"
        }
      },
      "required": [
        "source"
      ],
      "title": "Provenance",
      "type": "object"
    },
    "ProvenanceMethod": {
      "enum": [
        "manual",
        "scraped",
        "computed",
        "imported"
      ],
      "title": "ProvenanceMethod",
      "type": "string"
    }
  },
  "$id": "nova-cat://schemas/entities/alias/1.0.0",
  "additionalProperties": false,
  "description": "A name that refers to a nova. Names can evolve; UUID is stable.",
  "properties": {
    "created_at": {
      "format": "date-time",
      "title": "Created At",
      "type": "string"
    },
    "id": {
      "format": "uuid",
      "title": "Id",
      "type": "string"
    },
    "nova_id": {
      "format": "uuid",
      "title": "Nova Id",
      "type": "string"
    },
    "provenance": {
      "anyOf": [
        {
          "$ref": "#/$defs/Provenance"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "schema_version": {
      "default": "1.0.0",
      "description": "Semantic version for this persistent entity contract.",
      "examples": [
        "1.0.0"
      ],
      "title": "Schema Version",
      "type": "string"
    },
    "type": {
      "$ref": "#/$defs/AliasType",
      "default": "other"
    },
    "updated_at": {
      "format": "date-time",
      "title": "Updated At",
      "type": "string"
    },
    "value": {
      "maxLength": 256,
      "minLength": 1,
      "title": "Value",
      "type": "string"
    }
  },
  "required": [
    "nova_id",
    "value"
  ],
  "title": "Alias",
  "type": "object"
}
